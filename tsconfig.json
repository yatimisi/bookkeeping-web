{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/app/theme/components/*"],
      "@core/*": ["src/app/core/*"],
      "@theme/*": ["src/app/theme/*"],
      "@views/*": ["src/app/views/*"],
      "@env/*": ["src/environments/*"]
    }
  }
}
